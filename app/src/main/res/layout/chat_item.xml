<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcoeder"
        android:backgroundTint="#444654"
        android:padding="8dp"
        android:id="@+id/left_ChatView"
        android:layout_marginEnd="80dp"
        >
        <TextView
            android:id="@+id/left_ChatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcoeder"
        android:backgroundTint="#343541"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/right_ChatView"
        android:layout_marginStart="80dp"
        >
        <TextView
            android:id="@+id/right_ChatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
    </LinearLayout>

</RelativeLayout>